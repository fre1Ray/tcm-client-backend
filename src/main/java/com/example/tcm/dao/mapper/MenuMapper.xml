<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.tcm.dao.MenuDAO">
    <select id="getAllMenu" resultType="Menu">
        SELECT
            id,
            name text,
            parentId,
            url
        FROM ctm_menu;
    </select>
    <select id="getMenuByUserId" parameterType="int" resultType="Menu">
        SELECT
            m.id,
            m.name text,
            m.parentId,
            m.url
        FROM ctm_menu m INNER JOIN ctm_c_competence c ON m.id = c.menuId
        WHERE c.userId=#{userId}
    </select>
</mapper>